{
    "image": {
        "position": "left",
        "borderRadius": "10px",
        "transition": "image-slide",
        "border": {
            "visibility": "off",
            "color": "purple",
            "width": "2px"
        },
        "glow": {
            "visibility": "on",
            "size": "35px",
            "opacity": "75%"
        }
    },
    "caption": {
        "text": {
            "fontFamily": "Amatic SC",
            "fontSize": "1.6em",
            "fontWeight": "normal",
            "position": "bottom",
            "color": "white",
            "opacity": "100%",
            "transition": "text-slide"
        },
        "shadow": {
            "visibility": "on",
            "color": "black",
            "offset": "1px",
            "size": "2px"
        }
    },
    "duration": "10"
}